#include<stdio.h>
#include<math.h>
#define pi 3.1416
int main(){
    double Td = 45.0; //Td=Theta in degree
    double Trad = Td * pi / 180.0; //Trad=Theta in radian
    double sinValue = sin(Trad);
    double ratio = 1.0 / sinValue;
    printf("The ratio between the slit width and the wavelength is %.3f\n", ratio);
    return 0;
}
